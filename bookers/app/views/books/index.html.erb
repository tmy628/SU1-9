<% if flash[:notice] %>
 <div class="flash">
  <%= flash[:notice] %>
 </div>
<% end %>

<h1>Books</h1>
<table>
  <tr>
   <th>title</th>
   <th>body</th>
   <th></th>
  </tr>

 <% @books.each do |book| %>
  <tr>
   <td>
    <%= book.title %>
   </td>
   <td>
    <%= book.body %>
   </td>
   <td><%= link_to "Show", book_path(book) %></td>
   <td><%= link_to "Edit", edit_book_path(book) %></td>
   <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
 <% end %>
</table>

 <h2>New book</h2>
 <!-- form_with部分 -->
 <%= form_with model: @book, url:"/books#{@book.id}", local:true do |f| %>
 <!-- url:"/books#{@book.id}", → "books# でokだった 何故-->
  <% if @book.errors.any? %>
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
 <% end %>